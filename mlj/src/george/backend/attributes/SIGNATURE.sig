(* The Signature attribute (at present completely uninterpreted) is
   used in GJ.
   *)
signature SIGNATURE=
sig
   type t=JavaString.t
   type t2 (* result of pool_pass *)
   val name:JavaString.t

   val pool_pass:AllPools.AllPools*t->t2
   val bytecode_pass:t2->W8.vector

   val decode_attr:(ReadPool.pool*BinIO.instream)*int->t
end
